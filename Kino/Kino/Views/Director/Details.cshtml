@model Kino.Models.Kino.DirectorModel.DirectorViewModel

@{
    ViewData["Title"] = "Details";
    var imgPath = "~/Images/" + (Model.Director.ImageUrl ?? "NoImage.png");
}

<ol class="breadcrumb" style="background-color: transparent;">
    <li><a asp-action="Index">Directors</a></li>
    <li class="active">Details</li>
</ol>


<div class="details-container">

    <div class="details-title">
        @Html.DisplayFor(model => model.Director.FullName)
    </div>

    <div class="details-img">
        <img src="@imgPath" asp-append-version="true" />
    </div>

    <div class="details-info">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Director.Birth)
            </dt>
            <dd>
                @Model.Director.Birth.ToLongDateString()
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Director.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Director.Description)
            </dd>
        </dl>
    </div>
    <div class="clear"></div>
</div>

@if (Model.Director.ListOfMovies.Count() > 0)
{
    <div class="details-cast">

        <h5>Movies</h5>

        @foreach (var movie in Model.Director.ListOfMovies)
        {

            <div class="details-cast-img">
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.MovieId">
                    <img src="~/images/@movie.ImageUrl">
                    <h6>@movie.Title</h6>
                </a>
            </div>
        }

    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Director.DirectorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
