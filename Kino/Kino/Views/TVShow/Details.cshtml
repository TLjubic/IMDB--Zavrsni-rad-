@model Model.TVShow

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>TVShow</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumberOfEpisode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberOfEpisode)
        </dd>
        <dt>
            Genre
        </dt>
        <dd>
            @foreach (var genre in Model.ListOfGenres)
            {
                @genre.Genre.Name @:
            }
        </dd>
        <dt>
            Cast
        </dt>
        <dd>
            @foreach (var star in Model.ListOfStars)
            {
                <a asp-controller="Star" asp-action="Details" asp-route-id="@star.StarId">
                    @star.Star.FullName
                </a>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TVShowId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
